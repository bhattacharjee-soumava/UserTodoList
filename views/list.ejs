<div class="box" id="heading">
  <h1> My Todo Lists Categories</h1>
</div>

<div class="box">


  <% lists.forEach((list) => { %>
    <form class="" action="/userListCategory/delete" method="post" >
      <div class="item">
        <input type="hidden" name="page" value="userListCategory" >
        <input type="checkbox" name="myCheckbox" onChange="submit()" value= <%= list._id %>
        <p><%= list.listCategory %></p>
      </div>
    </form>
  <% }); %>



  <form class="item" action="/home" method="post">
    <input type="text" name="getToDoCategory" placeholder="New To do Category" autocomplete="off">
    <button type="submit" name="list" value="userListCategories">+</button>
  </form>
</div>

