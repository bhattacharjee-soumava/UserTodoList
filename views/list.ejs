<%- include("header") -%>


<div class="box" id="heading">
  <h1><%= listTitle  %> </h1>
</div>

<div class="box">


  <% newItems.forEach((item) => { %>
    <form class="" action="/delete" method="post" >
      <div class="item">
        <input type="hidden" name="page" value=<%= listTitle %> >
        <input type="checkbox" name="myCheckbox" onChange="submit()" value= <%= item._id %> >
        <p><%= item.todoEntry %></p>
      </div>
    </form>
  <% }); %>



  <form class="item" action="/" method="post">
    <input type="text" name="getToDo" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>

<%- include("footer") -%>
