<div class="box">


  <% lists.forEach((list) => { %>
    <form class="exploreDelete" action="/userListCategory/exploreDelete" method="post" >
      <div class="item ">
        <!-- <input type="hidden" name="checkbox" value="userListCategory" > -->
        <input type="checkbox" name="myCheckbox" onChange="submit()" value= <%= list._id %> >
        <!-- <input type="hidden" name="category" value="userListCategory" > -->
        <input type="text" class="hover listCategory" name="listCategory"  onClick="submit()" value=" <%= list.listCategory %>">

      </div>
    </form>
  <% }); %>



  <form class="item" action="/home" method="post">
    <input type="text" name="getToDoCategory" placeholder="New To do Category" autocomplete="off">
    <button type="submit" name="list" value="userListCategories">+</button>
  </form>
</div>



